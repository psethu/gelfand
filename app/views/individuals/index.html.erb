<div class="row">

  <div class="small-3 columns leftNav">
    <img src="<%= asset_path( 'gelfandLogo.jpg' ) %>" /> 
    <em><strong><%= link_to 'New Individual', new_individual_path %></strong></em>
  </div>

  <div class="small-9 columns rightContent">
    <h1>All Registered Individuals</h1>

    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Role</th>
          <th>Date of Birth</th>
          <th>Active</th>
          <th>Bg check</th>
          <th>Contact</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @individuals.each do |individual| %>
          <tr>
            <td><%= individual.f_name %></td>
            <td><%= individual.l_name %></td>
            <td><%= individual.format_role %></td>
            <td><%= individual.dob %></td>
            <td><%= individual.active %></td>
            <td><%= individual.bg_check_id %></td>
            <td><%= individual.contact_id %></td>
            <td class="row_actions"><%= link_to 'Show', individual %></td>
            <td class="row_actions"><%= link_to 'Edit', edit_individual_path(individual) %></td>
            <td class="row_actions"><%= link_to 'Destroy', individual, method: :delete, data: { confirm:        'Are you sure?' } %></td>   
          </tr>     
        <% end %>
      </tbody>      
    </table>        

    <br>
  </div>

</div>
