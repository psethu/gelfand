<img style="position:absolute; top:10px; left:10px; border: 2px dotted gray;height:150px; width: 200px;" src="<%= asset_path( 'gelfandLogo.jpg' ) %>" /> 

<h1 style="position:absolute; top:10px; left:215px;">Listing organizations</h1>

<table style="left:215px;top:75px; position: absolute; border: 2px solid gray;">
  <thead style="background-color:sienna;">
    <tr >
      <th style="color:white;">Name</th>
      <th style="color:white;">Is partner</th>
      <th style="color:white;">Description</th>
      <th style="color:white;">Active</th>
      <th style="color:white;">Department</th>
      <th style="color:white;">Contact</th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.is_partner %></td>
        <td><%= organization.description %></td>
        <td><%= organization.active %></td>
        <td><%= organization.department %></td>
        <td><%= organization.contact_id %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="position:absolute; top:215px; left:10px;">
<%= link_to 'New Organization', new_organization_path %>
</div>